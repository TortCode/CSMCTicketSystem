{% extends '../../../shared/base.html.twig' %}
{% block body %}
    <h2 class="content_title">Scheduled Sessions</h2>
    <table id="sessions" class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Section(s)</th>
            <th>Topic</th>
            <th>Description</th>
            <th>Grades</th>
        </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr>
                <td>
                    {% for section in session.section %}
                        {{ section }}
                    {% endfor %}
                </td>
                <td>{{ session.topic }}</td>
                <td>{{ session.description }}</td>
                <td>
                    <a href="{{ path(concat('/mentor/session/grades/', session.scheduledSessionId)) }}">
                        <div class="btn btn-success">Edit</div>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <h2>Quizzes</h2>
    <table id="quizzes" class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Section(s)</th>
            <th>Topic</th>
            <th>Description</th>
            <th>Grades</th>
        </tr>
        </thead>
        <tbody>
        {% for quiz in quizzes %}
            <tr>
                <td>
                    {% for section in quiz.section %}
                       {{ section }}
                    {% endfor %}
                </td>
                <td>{{ quiz.topic }}</td>
                <td>{{ quiz.description }}</td>
                <td>
                    <a href="{{  path(concat('/mentor/session/grades/', quiz.quizId)) }}">
                        <div class="btn btn-success">Edit</div>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(function() {
           $('#sessions').DataTable({
               'ordering':false,
               'searching': true,
               'paging':true
           });
           $('#quizzes').DataTable({
               'ordering':false,
               'searching': true,
               'paging':true
           });
        });
    </script>
{% endblock %}