{% extends '../../../../shared/base.html.twig' %}
{% block body %}

        <h2>{{ session.topic }}</h2>
        <dl class="dl-horizontal">
            <dt>Date</dt>
            <dd>{{ session.startTime|date('MM-dd-yyyy') }}</dd>
            <dt>Time</dt>
            <dd>{{ session.startTime|date('hh:mm a') }}</dd>
            <dt>Room</dt>
            <dd>{{ session.location }}</dd>
            <dt>Descriptions</dt>
            <dd>{{ session.description }}</dd>
            <dt>Instructions</dt>
            <dd>{{ session.studentInstructions }}</dd>
            <dt>Remaining Seats</dt>
            <dd>{{ session.remainingSeats }}/{{ session.capacity }}</dd>
        </dl>
        <form action="{{ path(concat('/student/session/register/timeslot/confirm/', session.timeSlotId)) }}"
              method="post">
            {#  TODO reconsider below check on policy existence as there are no files related to policy  #}
            <input type="checkbox" name="policy-check" required
                   oninvalid="this.setCustomValidity('Please agree to the Rules and Policies to continue')"
                   oninput="setCustomValidity('')"/> I have read and agree to the CSMC Rules and Policies .
            <br/>
            <button class="btn btn-success" style="width: 110px" type="submit">
                <span class="glyphicon glyphicon-ok"></span>
                Register
            </button>
        </form>



{% endblock %}
