{% extends '../../../shared/base.html.twig' %}
{% block body %}
    <h2>Your Current Courses</h2>
    <table id="table" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Course Name</th>
            <th>Course Number</th>
            <th>Section Number</th>
            <th>Instructor</th>
        </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.courseName }}</td>
                <td>{{ section.courseNumber }}</td>
                <td>{{ section.sectionNumber }}</td>
                <td>{{ section.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('#table').DataTable({
                paging: false,
                ordering: true,
                order: [[0, 'asc']],
                searching: true
            });
        });
    </script>
{% endblock %}
