{% extends '../base.html.twig' %}
{% block body %}
    <div class="center_col" role="main">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2> Create Semester</h2>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">

                        <br/>

                        <form class="form-horizontal form-label-left" method="post"
                              action="/admin/semester/create/submit">

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Season
                                </label>
                                {#{{ form_errors(form.department) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select id="season" name="season" class="form-control col-md-7 col-xs-12" required>
                                        {% for season in Seasons %}
                                            {#<option value="{{ season.getSeasonID() }}"> {{ season.getSeasonName() }}</option>#}
                                            <option value="{{ season }}"> {{ season }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Year
                                </label>
                                {#{{ form_errors(form.number) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="year" name="year" type="text"
                                           class="form-control col-md-7 col-xs-12" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Start Date
                                </label>
                                {#{{ form_errors(form.name) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="startdate" name="startdate" type="date" placeholder="YYYY-MM-DD" class="form-control col-md-7 col-xs-12" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    End Date
                                </label>
                                {#{{ form_errors(form.name) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="enddate" name="enddate" type="date" placeholder="YYYY-MM-DD" class="form-control col-md-7 col-xs-12" required>
                                </div>
                            </div>



                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-weight:200">
                                    Active
                                </label>
                                {#{{ form_errors(form.supported) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="supported" name="supported" type="checkbox">
                                    {#<input id="supported" name="supported" type="checkbox" class="form-control col-md-7 col-xs-12">#}
                                </div>
                            </div>



                            <div class="ln_solid"></div>

                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button class="btn btn-secondary" type="button"
                                            onclick="location.href='/admin/semester'">
                                        Cancel
                                    </button>
                                    <button class="btn btn-success" type="submit">
                                        Submit
                                    </button>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
