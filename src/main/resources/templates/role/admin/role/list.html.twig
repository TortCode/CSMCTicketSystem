{% extends "../base.html.twig" %}
{% block body %}

    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">

                <div class="x_title">
                    <div class="title_left">
                        <h3>Roles
                            <a class="pull-right btn btn-success" href="{{ path('/admin/user/role/create/') }}">
                                New Role
                            </a>
                        </h3>
                    </div>
                </div>
                <div class="clearfix"></div>

                <div class="x_content">
                    {% if message|length > 0 %}
                        <div class="alert alert-danger" id="errorDiv">
                            <span class="close" onclick="this.parentElement.style.display='none';">&times;</span>
                            <strong> {{ message }} </strong>
                        </div>
                    {% endif %}

                    <p class="text-muted font-13 m-b-30"></p>
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Role Name</th>
                            <th>Description</th>
                            <th>Edit</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for r in roles.roles %}
                            <tr>
                                <td>{{ r.name }}</td>
                                <td>{{ r.description }}</td>
                                <td>
                                    <a class="btn btn-success"
                                       href="{{ path(concat('/admin/user/role/edit/', r.id, '/')) }}">
                                        Edit
                                    </a>
                                    <a class="btn btn-danger"
                                       href="{{ path(concat('/admin/user/role/remove/', r.id, '/')) }}">
                                        Remove
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
     
     
     
