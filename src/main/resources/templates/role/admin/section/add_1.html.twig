{% extends '../base.html.twig' %}
{% block body %}
    <div class="center_col" role="main">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2> Create Course</h2>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">

                        <br/>

                        <form class="form-horizontal form-label-left" method="post"
                              action="/admin/course/create/submit">

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Department
                                </label>
                                {#{{ form_errors(form.department) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select id="department" name="department" class="form-control col-md-7 col-xs-12">
                                        {% for department in departments %}
                                            <option value="{{ department }}"> {{ department }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Course Number
                                </label>
                                {#{{ form_errors(form.number) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="number" name="number" type="text"
                                           class="form-control col-md-7 col-xs-12" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Course Name
                                </label>
                                {#{{ form_errors(form.name) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="name" name="name" type="text" class="form-control col-md-7 col-xs-12" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-weight:200">
                                    Is this Course Supported
                                </label>
                                {#{{ form_errors(form.supported) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="supported" name="supported" type="checkbox">
                                    {#TODO: Need to check why adding form-control is changing the size of the checkbox and alignment as it is needed to keep label adn checkbox at the same horizontal level#}
                                    {#<input id="supported" name="supported" type="checkbox" class="form-control col-md-7 col-xs-12">#}
                                </div>
                            </div>

                            <div class="form-group">

                                <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-weight:200">
                                    Admin Notes
                                </label>
                                {#{{ form_errors(form.description) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <textarea id="description" name="description" rows="7"
                                              class="form-control col-md-7 col-xs-12"></textarea>
                                </div>
                            </div>

                            <div class="ln_solid"></div>

                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button class="btn btn-secondary" type="button"
                                            onclick="location.href='/admin/course'">
                                        Cancel
                                    </button>
                                    <button class="btn btn-success" type="submit">
                                        Submit
                                    </button>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
