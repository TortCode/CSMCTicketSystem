{% extends '../base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Create Announcement</h2>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    {# Checking for form errors and displaying them#}
                    {% if not form.vars.valid %}
                        <div class="alert alert-danger" id="errorDiv">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}
                    <br/>


                    <form class="form-horizontal form-label-left" method="post"
                                                  action="/admin/announcement/create/submit">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Subject
                                </label>
                                {#{{ form_errors(form.department) }}#}

                                 <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="subject" name="subject" type="text"
                                         class="form-control col-md-7 col-xs-12" required>
                                 </div>

                                </div>


                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Message
                                </label>
                                {#{{ form_errors(form.number) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="message" name="message" type="text"
                                           class="form-control col-md-7 col-xs-12" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    Start Date
                                </label>
                                {#{{ form_errors(form.name) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="startdate" name="startdate" type="date" class="form-control col-md-7 col-xs-12" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                    End Date
                                </label>
                                {#{{ form_errors(form.name) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="enddate" name="enddate" type="date" class="form-control col-md-7 col-xs-12" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-weight:200">
                                    Role
                                </label>
                                {#{{ form_errors(form.supported) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select id="role[]" name="role[]" class="form-control col-md-7 col-xs-12" multiple="multiple">
                                       {% for role in adminAnnouncementResultDTO.getRoleList() %}
                                          <option value="{{ role.id }}"> {{ role.name }}</option>
                                       {% endfor %}
                                    </select>

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-weight:200">
                                    Active
                                </label>
                                {#{{ form_errors(form.supported) }}#}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="active" name="active" type="checkbox">

                                </div>
                            </div>

                            <div class="form-group">
                             <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-weight:200">
                                  Display Announcement before Login
                             </label>
                              {#{{ form_errors(form.supported) }}#}
                              <div class="col-md-6 col-sm-6 col-xs-12">
                                   <input id="displayannouncement" name="displayannouncement" type="checkbox">
                              </div>
                            </div>



                            <div class="ln_solid"></div>

                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button class="btn btn-secondary" type="button"
                                            onclick="location.href='/admin/announcement'">
                                        Cancel
                                    </button>
                                    <button class="btn btn-success" type="submit">
                                        Submit
                                    </button>
                                </div>
                            </div>

                        </form>
  </div>
    </div>
      </div>
        </div>

{% endblock %}