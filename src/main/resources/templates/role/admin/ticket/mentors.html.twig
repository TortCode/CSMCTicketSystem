{% extends '../base.html.twig' %}
{% block body %}
    <h2>Semester Statistics</h2>
    <table id="tickets" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Mentor</th>
                <th>Report</th>
            </tr>
        </thead>
        <tbody>
            {% for mentor in mentors %}
                <tr>
                    <td>{{ mentor.getName() }}</td>
                    <td>
                        <a href="{{ path('/admin/ticket/stats/' ~ mentor.id) }}" class="btn btn-success">View</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
