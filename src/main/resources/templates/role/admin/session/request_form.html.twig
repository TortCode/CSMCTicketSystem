    <div class="form-group">
        <div class="control-label">
            Uploaded files
        </div>
        <div>
            {% for file in form.uploadedFiles %}
                <div>
                    <input class="check-box" type="checkbox" id="{{ file }}" name="{{ file }}" checked>
                    <label for="{{ file }}">{{file}}</label>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <a class="btn btn-secondary" type="button" href="{{ path('admin_session_requests') }}">
                Cancel
            </a>
            <button id="session-submit" type="button" class="btn btn-success" data-active="scheduled_session">
                Submit
            </button>
        </div>
    </div>
