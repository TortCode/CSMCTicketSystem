{% extends "../base.html.twig" %}
{% block body %}
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="title_left">
                            <h3>List Departments
                                <button type="button" class="btn btn-primary"
                                        onclick="location.href='{{ path('/admin/department/create') }}'"
                                        style="float:right">
                                    New Department
                                </button>
                            </h3>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                            <tr role="row">
                                <th>Name</th>
                                <th>Abbreviations</th>
                                <th>Admin Notes</th>
                                <th>Edit</th>
                            </thead>
                            <tbody>
                            {% for department in departments %}
                                <tr>
                                    <td>{{ department.name }}</td>
                                    <td>{{ department.abbreviation }}</td>
                                    <td>{{ department.adminNotes }}</td>
                                    <td>
                                        <a type="button" class="btn btn-success"
                                           href="{{ path('/admin/department/edit/' ~ department.departmentId) }}">
                                            Edit
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
        {% block javascripts %}
            {{ parent() }}
            <script>
                $(function () {
                    var table = $('#datatable').DataTable({
                        searching: true,
                        ordering: true,
                        paging: true,
                    });
                });
            </script>
        {% endblock %}
