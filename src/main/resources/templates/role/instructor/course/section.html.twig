{% extends '../../../shared/base.html.twig' %}
{% block body %}
{#    {% include '../../../shared/component/flash_messages.html.twig' %}#}
    <h2>Sections</h2>
    <table id="table" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Course</th>
            <th>Number</th>
            <th>Number of Students</th>
            <th>View Roster</th>
        </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.course.department.abbreviation }} {{ section.course.number }}</td>
                <td>{{ section.number }}</td>
                <td>{{ section.rosterLength }}</td>
                <td>
                    <a href="{{ path(concat( '/instructor/course/section/view/', section.id)) }}">
                        <div class="btn btn-success">View</div>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('#table').DataTable({
                paging: false,
                ordering: true,
                order: [[0, 'asc']],
                searching: true
            });
        });
    </script>
{% endblock %}